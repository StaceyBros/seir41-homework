<h1><%= @brewery.name %></h1>

  <% if @brewery.image.present? %>
    <%= image_tag @brewery.image, :class => 'feature', :alt => @brewery.name %>
  <% end %>

<ul>
  <li>Location: <%= @brewery.location %></li>
  <li>Specialty: <%= @brewery.specialty %></li>
  <li>Description: <%= @brewery.description %></li>
  <li><%= link_to "Visit #{ @brewery.name }", "#{ @brewery.map }", :target => '_blank'%></li>
</ul>

<div class="controls">
  <%= link_to 'Edit Brewery', edit_brewery_path(@brewery) %>
  ~
  <%= link_to 'Delete Brewery (not recommended!)', @brewery, :method => 'delete' %>
</div>
