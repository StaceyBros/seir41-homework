<%= form_for @author do |f| %>
<%= f.label :title %>
<%= f.text_field :title, :autofocus =>true, :required => true %>

<%= f.label :nationality %>
<%= f.text_field :nationality %>

<%= f.label :genre %>
<%= f.text_field :genre %>

<%= f.label :image %>
<%= f.url_field :image %>

<%= f.submit %>
<% end %>
