<h1>Add New Mountain</h1>
<form action="<%= mountains_path %>" method="post">
  <label>
    Name:
    <input name="name" required>
  </label>
  <label>
    Image:
    <input type="url" name="image" placeholder="url">
  </label>

  <label>
    Country:
    <input type="text" name="country">
  </label>

  <label>
    Elevation:
    <input type="number" name="elevation">
  </label>
  <button>Create Mountain</button>
</form>
