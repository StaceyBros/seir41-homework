<h1>Edit Author:<%= @author[:name] %> </h1>


<form action="/authors/<%= @author[:id] %>" method="post">

<label>
  Name:
  <input type="text" name='name' placeholder="author's name" required value="<%= @author.name %>">
</label>

<label>
  Country:
  <input type="text" name='country' placeholder="author's country" value="<%= @author.country %>" >
</label>

<label>
  Image:
  <input type="url" name='image' placeholder='http://......' value="<%= @author.image %>">
</label>

<button>UPDATE Author</button>

</form>
