<h2>Mt <%= @mountain.name %></h2>

<%= image_tag @mountain.image if @mountain.image.present? %>

<p>
  <%= number_with_delimiter(@mountain.height, :delimiter => ',') %>
   metres above sea level
</p>

<p>Country: <%= @mountain.country %></p>

<%= link_to 'Edit mountain', edit_mountain_path(@mountain.id) %>
<%= button_to 'Delete mountain', mountain_path(@mountain.id), :method => 'delete' %>
