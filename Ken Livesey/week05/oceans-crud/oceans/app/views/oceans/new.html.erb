<h2>New Ocean</h2>

<form action="<%= oceans_path %>" method="post">
  <label>
    Name:
    <input name="name" required>
  </label>

  <%# <label>
    Image:
    <input type="url" name="image">
  </label> %>

  <label>
    Location:
    <input type="text" name="location">
  </label>

  <label>
    Area:
    <input type="number" name="area">
  </label>

  <label>
    Volume:
    <input type="number" name="volume">
  </label>

  <label>
    Average depth:
    <input type="number" name="avg_depth">
  </label>

  <label>
    Coastline:
    <input type="number" name="coastline">
  </label>

  <button>Create ocean</button>
</form>
