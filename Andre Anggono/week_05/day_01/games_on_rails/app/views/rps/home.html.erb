<h1>Rock Paper Scissors</h1>
<h2>Select a move:</h2>
<form action="/rock-paper-scissors/result">
  <div>
    <% 3.times { |i| %>
    <label>
      <input type="radio" name="move" value="<%= @move_options[i]  %>" required>
      <%= @move_options[i] %>
    </label>
    <% }%>
  </div>
  <button>Play</button>
</form>
