<h2><%= @mountain.name %></h2>

<%= image_tag @mountain.image, :alt => @mountain.name if @mountain.image.present? %>

<ul>
  <li>Name: <%= @mountain.name %></li>
  <li>Country: <%= @mountain.country %></li>
  <li>Height: <%= @mountain.height %></li>
</ul>

<div class="controls">
  <div id="E">
    <%= link_to 'Edit mountain', edit_mountain_path(@mountain.id) %>
  </div>
  <div id="D">
    <%= button_to 'Delete mountain', mountain_path(@mountain.id), :method => 'delete' %>
  </div>
</div>
