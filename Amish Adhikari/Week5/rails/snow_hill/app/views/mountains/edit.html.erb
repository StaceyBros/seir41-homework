<h2>Edit Mountain</h2>

<form form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>
    Name:
    <input name="name" required placeholder="Please enter name" value="<%= @mountain.name %>">
  </label>

  <label>
    Image:
    <input type="url" name="image" value="<%= @mountain.image %>">
  </label>

  <label>
    Country:
    <input type="text" name="country" value="<%= @mountain.country %>">
  </label>

  <label>
    Height:
    <input type="number" name="height" value="<%= @mountain.height %>">
  </label>

  <button>Update mountain</button>
</form>
