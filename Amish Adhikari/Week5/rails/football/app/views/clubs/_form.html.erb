<%= form_for @club do |f| %>

<%= f.label :title %>
<%= f.text_field :title, :required => true, :autofocus => true %>

<%= f.label :Country %>
<%= f.text_field :country %>

<%= f.label :City %>
<%= f.text_field :city %>

<%= f.label :Founded %>
<%= f.text_field :founded, :placeholder => 'YYYY-MM-DD' %>

<%= f.label :image %>
<%= f.url_field :image %>

<%= f.submit %>

<% end %>
